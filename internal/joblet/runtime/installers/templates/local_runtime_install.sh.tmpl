#!/bin/bash
set -e

echo "Installing local runtime {{.RuntimeSpec}}"
echo "Setup script: {{.SetupScriptPath}}"

# Execute the local setup script
if [ -f "{{.SetupScriptPath}}" ]; then
    chmod +x "{{.SetupScriptPath}}"
    echo "Executing local setup script..."
    cd "$(dirname "{{.SetupScriptPath}}")"
    ./$(basename "{{.SetupScriptPath}}")
else
    echo "ERROR: Local setup script not found at {{.SetupScriptPath}}"
    exit 1
fi

echo "Local runtime {{.RuntimeSpec}} installation completed"